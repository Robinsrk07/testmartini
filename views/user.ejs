  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <% if (users) { %>
            <table class="table table"><style>
              table.table td,
              table.table th {
                color: #000000; /* Black font color */
              }
            </style>
             <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th>SL:NO</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>wallet_balance</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((user, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.mobile %></td>
                    <td style="padding-left: 70px;"><%= user.wallet_bal %></td>
                    <td>
                      <div class="btn-group">
                        <% if (user.is_list) { %>
                          <a href="/admin/block/<%= user._id %>" class="block-btn">
                            <button class="btn btn-danger btn-sm" data-product-id="<%= user._id %>" data-is-listed="<%= user.is_list %>">
                              Block
                            </button>
                          </a>
                        <% } else { %>
                          <a href="/admin/unblock/<%= user._id %>" class="unblock-btn">
                            <button class="btn btn-success btn-sm" data-product-id="<%= user._id %>" data-is-listed="<%= user.is_list %>">
                              Unblock
                            </button>
                          </a>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            <% } else { %>
              <h1>No users</h1>
            <% } %>
        </div>
      </div>
    </div>
  </div>
</main><script>
  document.addEventListener('DOMContentLoaded', () => {
    // Handle block confirmation
    document.querySelectorAll('.block-btn').forEach(blockBtn => {
      blockBtn.addEventListener('click', function(event) {
        const confirmed = confirm('Are you sure you want to block this user?');
        if (!confirmed) {
          event.preventDefault(); // Prevent the default action (navigation) if not confirmed
        }
      });
    });

    // Handle unblock confirmation
    document.querySelectorAll('.unblock-btn').forEach(unblockBtn => {
      unblockBtn.addEventListener('click', function(event) {
        const confirmed = confirm('Are you sure you want to unblock this user?');
        if (!confirmed) {
          event.preventDefault(); // Prevent the default action (navigation) if not confirmed
        }
      });
    });
  });
</script>
