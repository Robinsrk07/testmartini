    <script>
     $(document).ready(function() {
    const sizeSelect = $('#sizeSelect');
    const addToCartBtn = $('#addToCartBtn');
    const carousel = $('#carouselExampleIndicators');
    const stockDisplay = $('#stockDisplay');
    const quantityInput = $('#quantityInput');

    // Create a data structure to hold variant information
    const variantData = {
        <% products.variants.forEach(variant => { %>
            '<%= variant.colour._id %>': {
                sizes: [
                    <% variant.sizeQuantities.forEach(sizeQuantity => { %>
                        {
                            id: '<%= sizeQuantity.size._id %>',
                            name: '<%= sizeQuantity.size.size %>',
                            stock: <%= sizeQuantity.quantity %>
                        },
                    <% }); %>
                ]
            },
        <% }); %>
    };

    function updateAddToCartButton() {
        const selectedSize = sizeSelect.val();
        const quantity = parseInt(quantityInput.val(), 10);
        const selectedOption = sizeSelect.find(':selected');
        const stock = parseInt(selectedOption.data('stock'), 10);

        addToCartBtn.prop('disabled', !selectedSize || quantity === 0 || stock === 0);
    }

    function showSelectedVariantImages(variantId) {
        $('.carousel-item').removeClass('active').hide();
        $(`.carousel-item[data-variant-id="${variantId}"]`).first().addClass('active').show();
        carousel.carousel('dispose');
        carousel.carousel();
    }

    function populateSizeSelect(variantId) {
        sizeSelect.empty().append('<option value="">Choose an option</option>');
        
        const sizes = variantData[variantId].sizes;
        sizes.forEach(size => {
            sizeSelect.append(`<option value="${size.id}" data-stock="${size.stock}">${size.name}</option>`);
        });
        
        updateAddToCartButton();
    }

    function updateStockDisplay() {
        const selectedOption = sizeSelect.find(':selected');
        const stock = parseInt(selectedOption.data('stock'), 10);

        if (!isNaN(stock)) {
            if (stock > 10) {
                stockDisplay.text('In stock');
            } else if (stock > 0) {
                stockDisplay.text(`Only ${stock} left`);
            } else {
                stockDisplay.text('Out of stock');
            }

            // Update quantity input max value
            quantityInput.attr('max', Math.min(stock, 5));
            if (parseInt(quantityInput.val(), 10) > Math.min(stock, 5)) {
                quantityInput.val(Math.min(stock, 5));
            }
        } else {
            stockDisplay.text('Select a size to see stock');
            quantityInput.attr('max', 5);
        }

        updateAddToCartButton();
    }

    $('.color-option').on('click', function() {
        const selectedVariantId = $(this).data('variant-id');
        $('.color-option').removeClass('selected');
        $(this).addClass('selected');

        showSelectedVariantImages(selectedVariantId);
        populateSizeSelect(selectedVariantId);

        $('.variant-price').hide();
        $(`.variant-price[data-variant-id="${selectedVariantId}"]`).show();

        $('.thumbnail-image').hide();
        $(`.thumbnail-image[data-variant-id="${selectedVariantId}"]`).show();

        updateStockDisplay();
    });

    sizeSelect.on('change', function() {
        updateStockDisplay();
    });

    quantityInput.on('change', function() {
        updateAddToCartButton();
    });

    // Initialize with the first variant
    if ($('.color-option').length > 0) {
        $('.color-option').first().trigger('click');
    }

    // Add to Cart Button Click Event
    addToCartBtn.on('click', function() {
    const productId = '<%= products._id %>';
    const userId = '<%= user._id %>';
    const selectedColor = $('.color-option.selected').data('variant-id');
    const selectedSize = sizeSelect.val();
    const quantity = parseInt(quantityInput.val(), 10);

    $.ajax({
        url: '/user/addedtocart',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({
            userId: userId,
            productId: productId,
            colourId: selectedColor,
            sizeId: selectedSize,
            quantity: quantity
        }),
        success: function(response) {
            console.log(response.message);
            
            // Replace alert with SweetAlert2
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Product added to cart!',
                timer: 2000,
                showConfirmButton: false
            });

            if (response.totalQuantity !== undefined) {
                localStorage.setItem('cartQuantity', response.totalQuantity);
            }
        },
        error: function(error) {
            // Replace alert with SweetAlert2 for error case
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Failed to add product to cart.',
            });
        }
    });
});
});
    </script>

