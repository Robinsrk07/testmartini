<script>document.addEventListener('DOMContentLoaded', function() {
    const sizeSelect = document.getElementById('sizeSelect');
    const stockDisplay = document.getElementById('stockDisplay');
    const quantityInput = document.getElementById('quantityInput');
    const colorOptions = document.querySelectorAll('.color-option');
    let selectedColor = null;

    // Function to update stock display
    function updateStockDisplay() {
        const selectedOption = sizeSelect.options[sizeSelect.selectedIndex];
        const selectedSize = selectedOption.value;
        const stock = parseInt(selectedOption.getAttribute('data-stock'), 10);
        const optionColor = selectedOption.getAttribute('data-color');

        if (selectedColor && selectedSize && selectedColor === optionColor) {
            if (!isNaN(stock)) {
                if (stock > 10) {
                    stockDisplay.textContent = 'In stock';
                } else if (stock > 0) {
                    stockDisplay.textContent = `Only ${stock} left`;
                } else {
                    stockDisplay.textContent = 'Out of stock';
                }

                quantityInput.max = Math.min(stock, 5);
                if (parseInt(quantityInput.value, 10) > Math.min(stock, 5)) {
                    quantityInput.value = Math.min(stock, 5);
                }

                document.getElementById('addToCartBtn').disabled = stock <= 0;
            }
        } else {
            stockDisplay.textContent = 'Select a size and color to see stock';
            quantityInput.max = 5;
            document.getElementById('addToCartBtn').disabled = true;
        }
    }

    // Event listener for size select
    sizeSelect.addEventListener('change', updateStockDisplay);

    // Event listeners for color options
    colorOptions.forEach(option => {
        option.addEventListener('click', function() {
            selectedColor = this.getAttribute('data-variant-id');
            updateStockDisplay();
        });
    });
});

document.addEventListener('DOMContentLoaded', function() {
    const zoomableImages = document.querySelectorAll('.zoomable-image');

    zoomableImages.forEach(img => {
        img.addEventListener('click', function(e) {
            e.preventDefault(); // Prevent carousel from sliding
            if (this.classList.contains('zoomed')) {
                this.classList.remove('zoomed');
                this.style.transform = '';
            } else {
                this.classList.add('zoomed');
                const rect = this.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const xPercent = x / rect.width * 100;
                const yPercent = y / rect.height * 100;
                this.style.transformOrigin = `${xPercent}% ${yPercent}%`;
            }
        });

        img.addEventListener('mousemove', function(e) {
            if (this.classList.contains('zoomed')) {
                const rect = this.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const xPercent = x / rect.width * 100;
                const yPercent = y / rect.height * 100;
                this.style.transformOrigin = `${xPercent}% ${yPercent}%`;
            }
        });
    });

    // Prevent zoomed state when sliding carousel
    $('#carouselExampleIndicators').on('slide.bs.carousel', function () {
        const zoomedImage = document.querySelector('.zoomed');
        if (zoomedImage) {
            zoomedImage.classList.remove('zoomed');
            zoomedImage.style.transform = '';
        }
    });
});




</script>
     


