<%- include('header')-%>

<div class="card text-center p-4" style="width: 500px; margin: 100px; margin-left: 550px;">
    <div class="card-header h5 text-white bg-primary">Password Reset</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email  to reset your password.
        </p>
        <form action="/user/reset_password" method="post">
        <div data-mdb-input-init class="form-outline">
            <input type="email" id="typeEmail" class="form-control my-3" name="email" />
            <label class="form-label" for="typeEmail">Email input</label>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Reset password</button>
    </form>
        <!-- <a href="#" data-mdb-ripple-init class="btn btn-primary w-100">Reset password</a> -->
        <div class="d-flex justify-content-between mt-4">
            <a class="" href="#">Login</a>
            <a class="" href="#">Register</a>
        </div>
    </div>
</div>
<%- include('footer')-%>
