    <script>document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.btn-add-to-cart').forEach(function (button) {
            button.addEventListener('click', function () {
                const productId = button.getAttribute('data-id');
                const colourId = button.getAttribute('data-colour-id');
                const sizeId = button.getAttribute('data-size-id');
                const userId = '<%=user %>';
                const quantity = 1; // Assuming quantity is always 1 for this example
    
                fetch('/user/addedtocart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userId: userId,
                        productId: productId,
                        colourId: colourId,
                        sizeId: sizeId,
                        quantity: quantity
                    })
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data.message);
                    alert('Product added to cart!');
                    if (data.totalQuantity !== undefined) {
                        localStorage.setItem('cartQuantity', data.totalQuantity);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to add product to cart.');
                });
            });
        });
    });

    document.querySelectorAll('.btn-remove-item').forEach(function (button) {
            button.addEventListener('click', function () {
                const productId = button.getAttribute('data-id');
                const userId = '<%= user %>';

                fetch('/user/removefromwishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userId: userId,
                        productId: productId
                    })
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data.message);
                    alert('Product removed from wishlist!');
                    location.reload(); // Refresh the wishlist
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to remove product from wishlist.');
                });
            });
        });
    
    </script>
