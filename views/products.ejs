document.addEventListener('DOMContentLoaded', function() {
  function updatePriceAndQuantity(row, price, quantity) {
    const priceDisplay = row.querySelector('.price-display');
    const quantityDisplay = row.querySelector('.quantity-display');
    priceDisplay.textContent = price;
    quantityDisplay.textContent = quantity;
  }

  function handleColorSelection(event) {
    const row = event.target.closest('tr');
    const selectedColorVariantId = event.target.value;
    const selectedColorPrice = event.target.options[event.target.selectedIndex].getAttribute('data-price');
    const sizeSelect = row.querySelector('.size-select');
    const selectedSizeOption = sizeSelect.options[sizeSelect.selectedIndex];

    if (selectedSizeOption && selectedColorVariantId) {
      const sizeVariantId = selectedSizeOption.getAttribute('data-variant-id');
      const selectedQuantity = sizeVariantId === selectedColorVariantId ? selectedSizeOption.getAttribute('data-quantity') : 0;
      updatePriceAndQuantity(row, selectedColorPrice, selectedQuantity);
    } else {
      updatePriceAndQuantity(row, selectedColorPrice, 0);
    }
  }

  function handleSizeSelection(event) {
    const row = event.target.closest('tr');
    const selectedSizeOption = event.target.options[event.target.selectedIndex];
    const selectedSizeVariantId = selectedSizeOption.getAttribute('data-variant-id');
    const colorSelect = row.querySelector('.color-select');
    const selectedColorVariantId = colorSelect.value;
    const selectedColorPrice = colorSelect.options[colorSelect.selectedIndex].getAttribute('data-price');

    if (selectedColorVariantId && selectedSizeVariantId) {
      const selectedQuantity = selectedSizeVariantId === selectedColorVariantId ? selectedSizeOption.getAttribute('data-quantity') : 0;
      updatePriceAndQuantity(row, selectedColorPrice, selectedQuantity);
    } else {
      updatePriceAndQuantity(row, 0, 0);
    }
  }

  document.querySelectorAll('.color-select').forEach(select => {
    select.addEventListener('change', handleColorSelection);
  });

