<div class="container">
  <h1 class="my-4">Products</h1>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive ">
        <table class="table table-striped ">
          <thead>
            <tr>
              <th>Product</th>
              <th>Color</th>
              <th>Size</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
           
            <% products.forEach(function(product) { %>
            <tr data-product-id="<%= product._id %>">
              <td>
                <div class="d-flex align-items-center">
                  <% if (product.variants && product.variants.length > 0 && product.variants[0].images && product.variants[0].images.length > 0) { %>
                      <img src="data:<%= product.variants[0].images[0].imagetype %>;base64,<%= product.variants[0].images[0].imagedata.toString('base64') %>" alt="Product Image" class="rounded mr-2" style="width: 50px; height: 50px;">
                  <% } else { %>
                      <span class="rounded bg-secondary mr-2" style="width: 50px; height: 50px;"></span>
                  <% } %>
                  <%= product.title %>
              </div>
              
              </td>
              <td>
                <div class="color-display">
                    <% product.variants.forEach(function(variant) { %>
                        <span class="color-item" data-product-id="<%= product._id %>" data-color="<%= variant.colour.colour %>" data-price="<%= variant.price %>">
                            <%= variant.colour.colour %>
                        </span><br><br>
                    <% }) %>
                </div>
            </td>
            <td>
                <div class="size-display">
                    <% product.variants.forEach(function(variant) { %>
                        <% variant.sizeQuantities.forEach(function(sizeQuantity) { %>
                            <span class="size-item" data-size="<%= sizeQuantity.size.size %>" data-variant-id="<%= variant._id %>" data-quantity="<%= sizeQuantity.quantity %>">
                                Size: <%= sizeQuantity.size.size %> 
                            </span><br><br>
                        <% }) %>
                    <% }) %>
                </div>
            </td>
            <td>
                <span class="price-display text-dark">
                    <% product.variants.forEach(function(variant) { %>
                        <span data-variant-id="<%= variant._id %>">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= variant.price %></span><br><br>
                    <% }) %>
                </span><br><br>
            </td>
            <td>
                <span class="quantity-display text-dark">
                    <% product.variants.forEach(function(variant) { %>
                        <% variant.sizeQuantities.forEach(function(sizeQuantity) { %>
                            <span data-variant-id="<%= variant._id %>">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= sizeQuantity.quantity %></span><br><br>
                        <% }) %>
                    <% }) %>
                </span><br><br>
            </td>
            
              <td>
                <div class="btn-group">
                  <a href="/admin/editproduct/<%= product._id %>">
                  <button class="btn btn-primary btn-sm mr-2 edit-btn"   >Edit</button></a>
                  <% if (product.is_list) { %>
                    <a href="/admin/unlist_product/<%= product._id %>">
                      <button class="btn btn-danger btn-sm unlist-btn" data-product-id="<%= product._id %>" data-is-listed="<%= product.is_list %>">
                        Unlist
                      </button>
                    </a>
                  <% } else { %>
                    <a href="/admin/list_product/<%= product._id %>">
                      <button class="btn btn-success btn-sm list-btn" data-product-id="<%= product._id %>" data-is-listed="<%= product.is_list %>">
                        List
                      </button>
                    </a>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
        </li>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>


