            .address-toggle {
                position: absolute;
                top: 10px;
                right: 10px;
            }
            .address-toggle input[type="checkbox"] {
                display: none;
            }
            .address-toggle label {
                cursor: pointer;
                padding: 5px 10px;
                background-color: #f1f1f1;
                border-radius: 15px;
                transition: background-color 0.3s ease;
            }
            .address-toggle input[type="checkbox"]:checked + label {
                background-color: #28a745;
                color: white;
            }
            .address-toggle {
                display: flex;
                flex-direction: column; /* Stack items vertically */
              }

              /* Style for each child element within the address-toggle container */
              .address-toggle input[type="checkbox"],
